---
import Layout from '../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';
const allPosts = await getCollection('blog');
const latestPost = allPosts[0]; // Just take the first post, no date sorting
---
<body class="bg-black text-white">
	<div class="bg-[url('/assets/space-bg.jpg')] bg-cover bg-fixed bg-center min-h-screen">
    <div class="backdrop-blur-sm bg-black/60 min-h-screen">
	<Layout
	title="Club name"			
    description="Welcome to Your Space Club"
>
    <section class="hero" data-aos="fade-in">
        <h1 class="breathing text-5xl font-bold text-white text-center mt-10">
            ðŸš€ Welcome to Your Space Club
        </h1>
        <p class="text-center text-slate-300 mt-4 text-lg">
            Igniting curiosity beyond the skies
        </p>
    </section>

    <section class="latest-post">
        <h2 class="section-title">Latest from the Club</h2>
        {latestPost && latestPost.data && latestPost.slug ? (
            <article class="post-preview">
                <h3>{latestPost.data.title}</h3>
                <p>{latestPost.data.description}</p>
                <a href={`/blog/${latestPost.slug}`}>Read More â†’</a>
            </article>
        ) : (
            <p>No posts found.</p>
        )}
    </section>

    <section class="cta-section">
        <a href="/events" class="cta-button">Explore More Such Events</a>
    </section>
	</Layout>
	</div>
  </div>
</body>

